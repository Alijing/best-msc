<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jing.msc.cobweb.dao.SpiderMapper">
    <!--  通用查询结果列  -->
    <sql id="Base_Column_List">
        `id`, `account`, `name`, `password`, `phone`, `creator_id`, `create_time`, `reviser_id`, `revision_time`, `logic_flag`
    </sql>

    <select id="selectAllTable" resultType="java.util.Map">
        SELECT `table_name` AS tableName
        FROM information_schema.tables
        where table_schema = #{tableSchema} AND `TABLE_TYPE` = 'BASE TABLE'
    </select>
    <select id="selectAllFiled" resultType="java.util.Map">
        SHOW FULL COLUMNS FROM ${tableName}
    </select>
</mapper>
